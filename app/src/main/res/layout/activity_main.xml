<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hill.myappportfolio.MainActivity">

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:focusableInTouchMode="false"
        android:layout_marginTop="100dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:theme="@style/AppTheme"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="POPULAR MOVIES"
        android:id="@+id/button"
        android:layout_marginTop="50dp"
        android:background="#2e3d49"
        android:onClick="showToastPopularMovies"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="STOCK HAWKS"
        android:id="@+id/button2"
        android:layout_marginTop="30dp"
        android:background="#2e3d49"
        android:onClick="showToastStockHawks"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="BUILD IT BIGGER"
        android:id="@+id/button3"
        android:layout_marginTop="30dp"
        android:background="#2e3d49"
        android:onClick="showToastBuildItBigger"
        android:layout_below="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="MAKE YOUR APP MATERIAL"
        android:id="@+id/button4"
        android:layout_marginTop="30dp"
        android:background="#2e3d49"
        android:onClick="showToastMakeYourAppMaterial"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="GO UBIQUITOUS"
        android:id="@+id/button5"
        android:layout_marginTop="30dp"
        android:background="#2e3d49"
        android:onClick="showToastGoUbiquitous"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="CAPSTONE"
        android:id="@+id/button6"
        android:layout_marginTop="30dp"
        android:background="#2e3d49"
        android:onClick="showToastCapstone"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true" />
</RelativeLayout>